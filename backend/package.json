{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "Brenno Givigier <brennogivigier@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npx babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored && cd ../frontend && npm run build",
    "start": "node dist/index.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"cd ../frontend && npm run start\"",
    "server": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --poll --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "pretest": "npm run prisma migrate dev",
    "test": "jest --forceExit",
    "lint": "eslint src --ext ts --ignore-path .prettierignore",
    "format": "prettier \"**/*.+(ts)\" --write",
    "migrate": "prisma migrate dev",
    "deploy": "npm install --frozen-lockfile --legacy-peer-deps && npx prisma migrate deploy && npx babel src --extensions '.js,.ts' --out-dir dist --copy-files --no-copy-ignored && cd ../frontend && npm install ajv@6 ajv-keywords@3 --legacy-peer-deps --force && npm install --frozen-lockfile --legacy-peer-deps && NODE_OPTIONS=--openssl-legacy-provider npx react-scripts build"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/node": "^7.22.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "prisma": "^5.0.0"
  }
}
